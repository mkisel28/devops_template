# === OneDev Configuration ===
# Основные настройки
ONEDEV_VERSION=latest
ONEDEV_DOMAIN=onedev.local
ONEDEV_HTTP_PORT=6610
ONEDEV_SSH_PORT=6611

# База данных PostgreSQL
ONEDEV_DB_NAME=onedev
ONEDEV_DB_USER=onedev
ONEDEV_DB_PASSWORD=onedev_secure_password_change_me

# Настройки сети
TZ=Europe/Moscow

# Nginx настройки
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Пользователь системы
USER_ID=1000
GROUP_ID=1000

# Администратор OneDev
ONEDEV_ADMIN_USER=admin
ONEDEV_ADMIN_EMAIL=admin@example.com
ONEDEV_ADMIN_PASSWORD=admin_password_change_me

# Секретные ключи (генерируются автоматически)
ONEDEV_SERVER_UUID=
ONEDEV_CLUSTER_IP=
ONEDEV_HIBERNATE_KEY=

# Настройки безопасности
ONEDEV_ENABLE_REGISTRATION=false
ONEDEV_REQUIRE_TWO_FACTOR_AUTH=false

# Docker настройки
DOCKER_SOCK_PATH=/var/run/docker.sock
ONEDEV_DOCKER_EXECUTOR_ENABLED=true

# URL настройки
ONEDEV_ROOT_URL=http://${ONEDEV_DOMAIN}
ONEDEV_BASE_URL=http://${ONEDEV_DOMAIN}

# Настройки для продакшена
ONEDEV_PROXY_MODE=true
ONEDEV_USE_SSL=false

# Настройки для локальной разработки
LOCAL_DEV_MODE=false

# Настройки логов
ONEDEV_LOG_LEVEL=INFO
ONEDEV_ACCESS_LOG=true

# Настройки хранилища
ONEDEV_STORAGE_PATH=/opt/onedev
ONEDEV_BACKUP_RETENTION_DAYS=30

# Email настройки (опционально)
ONEDEV_SMTP_HOST=
ONEDEV_SMTP_PORT=587
ONEDEV_SMTP_USER=
ONEDEV_SMTP_PASSWORD=
ONEDEV_SMTP_TLS=true

# Git настройки
ONEDEV_GIT_LOCATION=/usr/bin/git
ONEDEV_DEFAULT_BRANCH=main

# Настройки агентов
ONEDEV_AGENT_PORT=6612
ONEDEV_AGENT_TIMEOUT=300

# Настройки производительности
ONEDEV_MAX_HEAP_SIZE=2g
ONEDEV_MAX_DIRECT_MEMORY=512m
ONEDEV_THREAD_POOL_SIZE=200

# Настройки кэша
ONEDEV_CACHE_SIZE=1000
ONEDEV_SESSION_TIMEOUT=30

# Webhook настройки
ONEDEV_WEBHOOK_TIMEOUT=60
ONEDEV_WEBHOOK_RETRIES=3
